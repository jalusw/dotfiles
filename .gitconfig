[user]
	name = jalusw
	email = jalusatrianiwijaya1@gmail.com


[alias]
	co = checkout
	br = branch
	cm = commit
	st = status
	df = diff
	lg = log
	lgp = log --pretty=oneline

[core]
	editor = nvim
	pager = less
	excludesfile = ~/.gitignore

[color]
	ui = auto

[color "branch"]
	remote = yellow
	
[color "diff"]
	meta = yellow
	frag = magenta
	old = red
	new = green
	whitespace = red reverse

[color "status"]
	added = yellow
	changed = green
	untracked = red

[color "grep"]
	match = cyan
	filename = yellow
	linenumber = blue
	match = cyan
	filename = yellow