# Minimal i3status config â€“ battery, RAM, volume, ethernet, date/time

general {
    colors = false
    interval = 1
}

order += "battery 0"
order += "memory"
order += "volume master"
order += "ethernet _first_"
order += "tztime local"

battery 0 {
    format = "bat: %status %percentage"
    format_down = "no battery"
    low_threshold = 10
}

memory {
    format = "mem: %used"
}

volume master {
    format = "vol: %volume"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

ethernet _first_ {
    format_up = "eth: %ip"
    format_down = "eth: down"
}

tztime local {
    format = "%Y-%m-%d %H:%M"
}
