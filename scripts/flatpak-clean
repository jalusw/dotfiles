#!/usr/bin/env bash
set -euo pipefail

if ! command -v flatpak >/dev/null 2>&1; then
  echo "flatpak not found."
  exit 0
fi

echo "[flatpak-clean] Removing unused runtimes and refs..."
flatpak uninstall --unused -y || true

echo "[flatpak-clean] Listing installed Flatpaks:"
flatpak list || true

echo "[flatpak-clean] Done."


